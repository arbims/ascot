

{% extends 'AppAdminBundle::default.html.twig'%}

{% block body %}
    <div class="col-md-12">
        <section class="panel">
            <div class="box box-danger">
                <div class="panel-body">
                    <form method="post" action="{{ path('ville_edit',{'id':ville.idVille}) }}"  enctype="multipart/form-data" class="panel panel-default">

                       <div class="col-md-12">
                            <div class="col-md-6">

                                <div class="form-group">
                                    <div class="alert-danger">{{ form_errors(form.nom) }}</div>
                                    <label>Libell√©</label>
                                    {{ form_widget(form.nom, {'attr': {'class':'form-control'}}) }}
                                </div>

                                <div class="form-group">
                                    <div class="alert-danger">{{ form_errors(form.pays_id) }}</div>
                                    <label>Pays</label>
                                    {{ form_widget(form.pays_id, {'attr': {'class':'form-control'}}) }}
                                </div>


                            </div>
                            {{form_widget(form._token)}}
