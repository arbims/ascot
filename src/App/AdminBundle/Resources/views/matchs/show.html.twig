{% extends 'base.html.twig' %}

{% block body %}
    <h1>Matchs</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ match.id }}</td>
            </tr>
            <tr>
                <th>Num</th>
                <td>{{ match.num }}</td>
            </tr>
            <tr>
                <th>Court</th>
                <td>{{ match.court }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('matchs_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('matchs_edit', { 'id': match.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
