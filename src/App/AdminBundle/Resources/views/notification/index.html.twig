{% extends 'base.html.twig' %}

{% block body %}
    <h1>Notification list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Vue</th>
                <th>Lien</th>
                <th>Idemetteur</th>
                <th>Idtypenotif</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for notification in notifications %}
            <tr>
                <td><a href="{{ path('notification_show', { 'id': notification.id }) }}">{{ notification.id }}</a></td>
                <td>{{ notification.vue }}</td>
                <td>{{ notification.lien }}</td>
                <td>{{ notification.idEmetteur }}</td>
                <td>{{ notification.idTypeNotif }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('notification_show', { 'id': notification.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('notification_edit', { 'id': notification.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('notification_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
