{% extends 'base.html.twig' %}

{% block body %}
    <h1>Joueur</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ joueur.id }}</td>
            </tr>
            <tr>
                <th>Nomprenom</th>
                <td>{{ joueur.nomPrenom }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ joueur.sexe }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ joueur.tel }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ joueur.mail }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ joueur.adresse }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ joueur.pays }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ joueur.ville }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('joueur_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('joueur_edit', { 'id': joueur.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
